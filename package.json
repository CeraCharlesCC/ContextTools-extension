{
  "name": "context-tools-extension",
  "version": "0.1.0",
  "description": "Cross-browser extension with Clean/Hexagonal Architecture",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "dev:chrome": "cross-env TARGET_BROWSER=chrome vite build --watch --mode development",
    "dev:firefox": "cross-env TARGET_BROWSER=firefox vite build --watch --mode development",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "cross-env TARGET_BROWSER=chrome vite build",
    "build:firefox": "cross-env TARGET_BROWSER=firefox vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rimraf dist dist-chrome dist-firefox"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^2.0.0",
    "@types/chrome": "^0.0.287",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
